@page "/"
@page "/index.html"
@inject IJSRuntime JS

<PageTitle>Home</PageTitle>

<MudTextField Label="Username (optional)"
              Variant="Variant.Outlined"
              @bind-Value=Model.RegisteredUserName
              Class="my-6" />

<MudStack Spacing="2">
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               Size="Size.Large"
               OnClick="RegisterAsync"
               Disabled="_processing"
               FullWidth="true">
        @if (_processing)
        {
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
            <MudText Class="ms-2">Processing</MudText>
        }
        else
        {
            <MudText>Register</MudText>
        }
    </MudButton>
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               Size="Size.Large"
               OnClick="AuthenticateAsync"
               Disabled="_processing"
               FullWidth="true">
        @if (_processing)
        {
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
            <MudText Class="ms-2">Processing</MudText>
        }
        else
        {
            <MudText>Authenticate</MudText>
        }
    </MudButton>
</MudStack>
